{
  "name": "Home Assistant Dev",
  "context": "..",
  "dockerFile": "../Dockerfile.dev",
  "postCreateCommand": "script/setup",
  "postStartCommand": "script/bootstrap",
  "containerEnv": { "DEVCONTAINER": "1", "DOMORPI_DUMMY": "1" },
  "appPort": ["8123:8123"],
  //"runArgs": ["-e", "GIT_EDITOR=code --wait", "--device=/dev/ttyUSB0"],
  "runArgs": ["-e", "GIT_EDITOR=code --wait"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.vscode-pylance",
        "visualstudioexptteam.vscodeintellicode",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "GitHub.vscode-pull-request-github"
      ],
      // Please keep this file in sync with settings in home-assistant/.vscode/settings.default.json
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.blackPath": "/usr/local/bin/black",
        "python.linting.pycodestylePath": "/usr/local/bin/pycodestyle",
        "python.linting.pydocstylePath": "/usr/local/bin/pydocstyle",
        "python.linting.mypyPath": "/usr/local/bin/mypy",
        "python.linting.pylintPath": "/usr/local/bin/pylint",
        "python.formatting.provider": "black",
        "python.testing.pytestArgs": ["--no-cov"],
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "yaml.customTags": [
          "!input scalar",
          "!secret scalar",
          "!include_dir_named scalar",
          "!include_dir_list scalar",
          "!include_dir_merge_list scalar",
          "!include_dir_merge_named scalar"
        ]
      }
    }
  },
  "mounts": [
    // Custom configuration directory
    "source=/data/My/DomoRpiHa/homeassistant/dev-config,target=${containerWorkspaceFolder}/config,type=bind",
    // Custom components
    "source=/data/My/DomoRpiHa/devel/integrations/localtuya/custom_components/localtuya,target=${containerWorkspaceFolder}/config/custom_components/localtuya,type=bind",
    "source=/data/My/DomoRpiHa/devel/integrations/urmet_1045/custom_components/urmet_1045,target=${containerWorkspaceFolder}/config/custom_components/urmet_1045,type=bind",
    "source=/data/My/DomoRpiHa/devel/integrations/domorpiha/custom_components/domorpiha,target=${containerWorkspaceFolder}/config/custom_components/domorpiha,type=bind",
    // Frontend
    "source=/data/My/DomoRpiHa/homeassistant/dev-frontend,target=/workspaces/frontend,type=bind,consistency=cached"
  ]
}
